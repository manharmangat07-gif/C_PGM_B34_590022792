#include <stdio.h>

int main() {
    float p, r, t;
    float si, ci, amount;
    int i;

    printf("Enter Principal: ");
    scanf("%f", &p);

    printf("Enter Rate of Interest: ");
    scanf("%f", &r);

    printf("Enter Time (in years): ");
    scanf("%f", &t);

    // Simple Interest
    si = (p * r * t) / 100;

    // Compound Interest (using loop instead of pow)
    amount = p;
    for(i = 1; i <= t; i++) {
        amount = amount + (amount * r / 100);
    }
    ci = amount - p;

    printf("\nSimple Interest = %.2f", si);
    printf("\nCompound Interest = %.2f", ci);

    return 0;
}
